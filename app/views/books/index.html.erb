<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>title</th>
            <th>body</th>
            <th colspan="3"></th>
        </tr>    
    </thead>
    <% @books.each do |book| %>
    <tbody>
        <th><%= book.title %></th>
        <th><%= book.body %></th>
        <th><%= link_to "Show", root_path %></th>
        <th><%= link_to "Edit", root_path %></th>
        <th><%= link_to "Destroy", root_path %></th>
    </tbody>
    <% end %>
</table>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %><br>
<% end %>