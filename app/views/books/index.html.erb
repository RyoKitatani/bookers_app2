<% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>title</th>
            <th>body</th>
            <th colspan="3"></th>
        </tr>    
    </thead>
    <% @books.each do |book| %>
    <tbody>
        <th><%= book.title %></th>
        <th><%= book.body %></th>
        <th><%= link_to "Show", book_path(book) %></th>
        <th><%= link_to "Edit", edit_book_path(book) %></th>
        <th><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "削除してよろしいでしょうか？" %></th>
    </tbody>
    <% end %>
</table>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %><br>
    <%= f.submit "Create Book" %>
<% end %>